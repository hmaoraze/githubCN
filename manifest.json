{
  "manifest_version": 3,
  "name": "GithubCN",
  "short_name": "GithubCN",
  "description": "GitHub 中文化插件 - 让 GitHub 更好用",
  "version": "1.5.0",
  "homepage_url": "https://github.com/JQiue/githubCN",
  "icons": {
    "16": "src/img/icon-16.png",
    "48": "src/img/icon-48.png",
    "128": "src/img/icon-128.png"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://*.github.com/*"],
      "js": ["src/js/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://*.github.com/*"
  ]
}